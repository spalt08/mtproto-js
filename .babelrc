{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-flow"
  ],

  "plugins": [
    "@babel/plugin-proposal-export-namespace-from",
    "@babel/plugin-proposal-export-default-from",
    "@babel/plugin-transform-classes",
    ["@babel/plugin-proposal-class-properties", { "loose": true }]
  ]
}
